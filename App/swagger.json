{
  "openapi": "3.0.1",
  "info": {
    "title": "Sistema de Gerenciamento Escolar Infantil",
    "version": "1.0.0",
    "description": "API para gerenciar alunos, professores e turmas da escola infantil UniFAAT-ADS."
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Servidor local"
    }
  ],
  "paths": {
    "/alunos": {
      "get": {
        "summary": "Lista todos os alunos",
        "responses": {
          "200": {
            "description": "Lista de alunos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "type": "object" }
                }
              }
            }
          }
        }
      }
    }
  }
}
